@model SecureStudentManager.Models.UserToRolesViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Add user to a role</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please select a user and a role </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  
        <div class="form-group">
            @Html.Label("Users", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId", ViewBag.Users as SelectList, "Please slect", new { @class = "form-control" })
                @Html.ValidationMessage("UserId", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Roles", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoleId", ViewBag.Roles as SelectList, "Please slect", new { @class = "form-control" })
                @Html.ValidationMessage("RoleId", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Roles with special list", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoleId", Model.AllRoles.Select(x=>new SelectListItem { Value = x.RoleId, Text = x.RoleName }), "Please slect special", new { @class = "form-control" })
                @Html.ValidationMessage("RoleId", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
